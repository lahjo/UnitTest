        mc:Ignorable="d"
        Title="MainWindow" Height="212.343" Width="525">
    <Grid>
        <TextBox x:Name="txtEtunimi" HorizontalAlignment="Left" Height="23" Margin="86,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
