        <TextBox x:Name="txtSiirtohinta" HorizontalAlignment="Left" Height="23" Margin="86,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="txtbSiirtohinta" HorizontalAlignment="Left" Margin="10,69,0,0" TextWrapping="Wrap" Text="Siirtohinta" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtbSeura" HorizontalAlignment="Left" Margin="10,103,0,0" TextWrapping="Wrap" Text="Seura" VerticalAlignment="Top"/>
