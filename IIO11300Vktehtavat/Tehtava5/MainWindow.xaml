        <ListBox x:Name="listBoxPelaajat" HorizontalAlignment="Left" Height="130" Margin="331,10,0,0" VerticalAlignment="Top" Width="176" MouseDoubleClick="listBoxPelaajat_MouseDoubleClick"/>
